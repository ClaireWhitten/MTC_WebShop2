@using MTC_WebServerCore.ViewModels.Category
@model AddCategoryViewModel
@{
    ViewData["Title"] = "Add Category";
    //var errorCode = ViewData["ErrorCode"];
}

<h2>Add Category</h2>
<form asp-controller="Category" asp-action="AddCategory" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for=" ParentCategorieId"></label>
        <select id="cmbPublicher" asp-for="ParentCategorieId" class="custom-select mr-sm-2"
                asp-items="Model.productCategories">
            <option value="">None</option>
        </select>
        <span asp-validation-for="ParentCategorieId" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Save Category</button>

    @*@if (errorCode == "DUPLICATE")
    {
        <span></span>
    }*@

</form>
