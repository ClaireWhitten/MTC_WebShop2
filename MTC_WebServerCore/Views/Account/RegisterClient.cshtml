@model RegisterClientViewModel
@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnv

@{
    ViewData["Title"] = "Register";
    bool isDevelopment = hostingEnv.EnvironmentName == "Development" ? true : false;
}

<hr />
<h1>Client registration</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form method="post">

            @*================================= INLOGGegevens =======================================================*@
            @if (@isDevelopment)
            {
                @*<div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>*@
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" value="Test_123" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" value="Test_123" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                //deze nodig omdat we een invalide model krijgen
                <input hidden asp-for="Address.UserID" value="x" />
            }
            else
            {
                @*<div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>*@
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                //deze nodig omdat we een invalide model krijgen
                <input hidden asp-for="Address.UserID" value="x" />
            }



            @*================================= ADRESS =======================================================*@
            @if (@isDevelopment)
            {
                <div class="form-group">
                    <label asp-for="Address.Street"></label>
                    <input asp-for="Address.Street" class="form-control" value="ItalieLei" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.HouseNumber"></label>
                    <input asp-for="Address.HouseNumber" class="form-control" value="200" />
                    <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.HouseNumberAdditional"></label>
                    <input asp-for="Address.HouseNumberAdditional" class="form-control" />
                    <span asp-validation-for="Address.HouseNumberAdditional" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Address.ZipCode"></label>
                    <input asp-for="Address.ZipCode" class="form-control" value="2000" />
                    <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City"></label>
                    <input asp-for="Address.City" class="form-control" value="Antwerpen" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Country"></label>
                    <input asp-for="Address.Country" class="form-control" value="Belgie" />
                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Address.Street"></label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Address.HouseNumber"></label>
                    <input asp-for="Address.HouseNumber" class="form-control" />
                    <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.HouseNumberAdditional"></label>
                    <input asp-for="Address.HouseNumberAdditional" class="form-control" />
                    <span asp-validation-for="Address.HouseNumberAdditional" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.ZipCode"></label>
                    <input asp-for="Address.ZipCode" class="form-control" />
                    <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Country"></label>
                    <input asp-for="Address.Country" class="form-control" />
                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                </div>
            }



            @*========================================Client gegevens ========================================*@
            @if (isDevelopment)
            {
                <div class="form-group">
                    <label asp-for="Client.FirstName"></label>
                    <input asp-for="Client.FirstName" class="form-control" value="Albert" />
                    <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.NameAdditional"></label>
                    <input asp-for="Client.NameAdditional" class="form-control" />
                    <span asp-validation-for="Client.NameAdditional" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.LastName"></label>
                    <input asp-for="Client.LastName" class="form-control" value="Hein" />
                    <span asp-validation-for="Client.LastName" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Client.FirstName"></label>
                    <input asp-for="Client.FirstName" class="form-control" />
                    <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.NameAdditional"></label>
                    <input asp-for="Client.NameAdditional" class="form-control" />
                    <span asp-validation-for="Client.NameAdditional" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.LastName"></label>
                    <input asp-for="Client.LastName" class="form-control" />
                    <span asp-validation-for="Client.LastName" class="text-danger"></span>
                </div>
            }




            <div asp-validation-summary="All" class="text-danger"></div>

            <button type="submit" class="btn btn-primary">Registreer</button>
        </form>
    </div>
</div>
